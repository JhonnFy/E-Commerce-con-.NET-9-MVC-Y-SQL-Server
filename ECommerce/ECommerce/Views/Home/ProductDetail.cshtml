@model ProductVM

<section class="py-5 bg-body-tertiary">
    <div class="container px-4 pc-lg-5 my-5">
        <div class="row g-4 g-lg-5 align-items-center">

            <!-- Imagen izquierda -->
            <div class="col-md-6">
                <img class="card-img-top rounded mb-5"
                     src="~/images/@Model.ImageName"
                     alt="@Model.Name"
                     loading="lazy" />
            </div>

            <!-- Información derecha -->
            <div class="col-md-6">
                <!-- Name -->
                <h1 class="display-5 fw-bold mb-1">@Model.Name</h1>

                <!-- Price -->
                <div class="fs-5 mb-1 text-primary">
                    @Model.Price.ToString("N0")
                </div>

                <!-- Description -->
                <div class="text-muted mb-0">
                    @Html.Raw(Model.Description)
                </div>

                <!-- Stock debajo de la descripción -->
                <div class="text-muted">
                    Stock: @Model.Stock
                </div>

                <!-- Fecha de creación debajo del stock -->
                <div class="text-muted mb-3">
                    CreatedAt: @Model.CreatedAt.ToString("yyyy-MM-dd")
                </div>

                <!-- Botones -->
                <form class="d-flex align-items-center gap-3" action="/Home/AddItemToCart" method="post">
                    <!-- Contador -->
                    <input type="number" class="form-control text-center py-2" name="quantity" value="1" min="1" style="max-width:5rem; background-color:white; color:black;" />

                    <!-- Datos -->
                    <input type="hidden" name="productId" value="@Model.ProductId" />

                    <!-- Add to Cart -->
                    <button type="submit" class="btn btn-dark px-4 d-flex align-items-center gap-2">
                        <i class="fa-solid fa-cart-shopping" style="color:gray;"></i>
                        Add To Cart
                    </button>

                    <!-- Back -->
                    <a href="/Home/Index" class="btn btn-warning px-4" style="color:black;">
                        Back
                    </a>
                </form>

                @if (ViewBag.message !=null)
                {
                    <div class="alert alert-success mt-4" role="alert">
                        @ViewBag.message
                    </div>
                }


            </div>

        </div>
    </div>
</section>
