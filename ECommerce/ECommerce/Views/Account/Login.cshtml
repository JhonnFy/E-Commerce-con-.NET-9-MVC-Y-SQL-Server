@model LoginVM;

@{
    Layout = null;
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
</head>
<body>

    <div class="background-text">
        E-COMMERCE
    </div>

    <!-- Contenedor Login -->
    <div class="login-container">
        <h2>LOGIN</h2>

        <form action="/Account/Login" method="post">

            <label>Email</label>
            <input asp-for="Email" type="email" class="transparent-input" autocomplete="off" />

            <label>Password</label>
            <input asp-for="Password" type="password" class="transparent-input" autocomplete="off" />

            <button type="submit" class="btn-login">Login</button>
            <a href="/Account/Register" class="btn-register">Register</a>

        </form>
    </div>

</body>
</html>

<style>
    /* Aplicar box-sizing a todo */
    *,
    *::before,
    *::after {
        box-sizing: border-box;
    }

    /* Body y fondo */
    body {
        margin: 0;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background: linear-gradient(135deg, #ffffff, #e5e5e5);
        font-family: Arial, Helvetica, sans-serif;
        overflow: hidden;
    }

    /* Texto gigante atravesado */
    .background-text {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%) rotate(-18deg);
        font-size: 12rem;
        font-weight: 900;
        letter-spacing: 8px;
        z-index: 0;
        user-select: none;
        pointer-events: none;
        color: #053345;
        opacity: 0.08;
    }

    /* Contenedor formulario */
    .login-container {
        position: relative;
        z-index: 10;
        width: 480px; /* <-- ancho aumentado desde 340px */
        padding: 40px;
        background: transparent;
    }


        .login-container h2 {
            text-align: center;
            margin-bottom: 30px;
            font-weight: bold;
            letter-spacing: 2px;
            color: #053345;
        }

    label {
        font-size: 0.75rem;
        font-weight: 600;
        color: #053345;
        display: block;
        margin-bottom: 6px;
    }

    /* Inputs transparentes */
    .transparent-input {
        width: 100%;
        padding: 10px;
        margin-bottom: 25px;
        border: none;
        border-bottom: 1px solid rgba(5,51,69,0.4);
        background: transparent;
        font-size: 0.9rem;
        transition: 0.3s;
        color: #053345;
    }

        .transparent-input:focus {
            outline: none;
            border-bottom: 1px solid #053345;
        }

    /* Botones unificados Login y Register */
    .btn-login,
    .btn-register {
        display: block;
        width: 100%;
        padding: 14px 10px;
        font-size: 1rem;
        text-align: center;
        border-radius: 5px;
        transition: 0.3s;
        margin-bottom: 10px;
        text-decoration: none;
    }

    /* Botón Login */
    .btn-login {
        background: #053345;
        color: white;
        border: none;
    }

        .btn-login:hover {
            background: #042733;
        }

    /* Botón Register / Back */
    .btn-register {
        background: transparent;
        border: 1px solid #053345;
        color: #053345;
    }

        .btn-register:hover {
            background: #053345;
            color: white;
        }

</style>
