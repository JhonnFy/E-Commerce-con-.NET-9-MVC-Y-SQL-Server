@model List<OrderVM>

<div class="row justify-content-between mt-4">
    <div class="col-4">
        <h4>My Orders</h4>
    </div>
</div>

<hr />


<table class="table custom-table">
    <thead>
        <tr>
            <th>Order Date</th>
            <th>Total Amount</th>
            <th>Order Items</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.OrderDate</td>
                <td>@item.TotalAmount</td>
                <td>
                    <ol class="list-group list-group-numbered">
                        @foreach (var element in item.OrderItems)
                        {
                            <li class="list-group-item">
                                @(element.ProductName + " + " + element.Quantity + " x " + element.Price)
                            </li>
                        }
                    </ol>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    /* Tabla igual que Categories */
    .custom-table tbody tr td {
        background-color: #053345 !important;
        color: white !important;
        transition: background-color 0.2s;
    }

    .custom-table tbody tr:hover td {
        color: yellow !important;
    }

    /* Cuadro contenedor de OrderItems */
    .list-group {
        background-color: #042837 !important; /* un tono apenas más oscuro */
        padding: 10px;
        margin: 0;
        border-radius: 0;
    }

    .list-group-item {
        background-color: #042837 !important;
        color: white !important;
        border: none !important;
    }

    .list-group-numbered > .list-group-item::marker {
        color: yellow;
        font-weight: bold;
    }
</style>
